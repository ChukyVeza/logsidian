    <script>
    // üö® CONVERSI√ìN AGRESIVA DE CHECKBOXES - VERSI√ìN MEJORADA üö®
    function convertAllCheckboxes() {
      console.log('üîÑ Buscando checkboxes para convertir...');
      
      // Buscar en TODO el documento
      const allElements = document.querySelectorAll('*');
      let convertedCount = 0;
      
      allElements.forEach(element => {
        // Solo procesar elementos que contengan texto de checkbox y no sean inputs
        if (element.tagName !== 'INPUT' && (element.innerHTML.includes('[ ]') || element.innerHTML.includes('[x]'))) {
          
          // Reemplazar [ ] con checkbox
          if (element.innerHTML.includes('[ ]')) {
            element.innerHTML = element.innerHTML.replace(/\[ \]/g, '<input type="checkbox" class="custom-checkbox-js">');
            convertedCount++;
          }
          
          // Reemplazar [x] con checkbox marcado
          if (element.innerHTML.includes('[x]')) {
            element.innerHTML = element.innerHTML.replace(/\[x\]/g, '<input type="checkbox" class="custom-checkbox-js" checked>');
            convertedCount++;
          }
          
          // Agregar clase para styling
          if (element.tagName === 'LI') {
            element.classList.add('task-item-custom-js');
          }
        }
      });
      
      console.log(`‚úÖ Convertidos ${convertedCount} checkboxes`);
    }

    // Ejecutar cuando el DOM est√© listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', convertAllCheckboxes);
    } else {
      convertAllCheckboxes();
    }

    // Tambi√©n ejecutar despu√©s de un delay por si el contenido se carga din√°micamente
    setTimeout(convertAllCheckboxes, 1000);
    setTimeout(convertAllCheckboxes, 3000);

    // Observar cambios en el DOM para contenido que se cargue despu√©s
    const observer = new MutationObserver(function(mutations) {
      convertAllCheckboxes();
    });

    observer.observe(document.body, {
      childList: true,
      subtree: true,
      characterData: true
    });
    </script>
	<script>
// üö® CONVERTIR P√ÅRRAFOS CON LISTAS A LISTAS HTML REALES üö®
function convertParagraphsToLists() {
  console.log('üîÑ Convirtiendo p√°rrafos con listas a HTML...');
  
  const paragraphs = document.querySelectorAll('p');
  let convertedCount = 0;
  
  paragraphs.forEach(paragraph => {
    const text = paragraph.textContent || paragraph.innerText;
    
    // Verificar si el p√°rrafo contiene elementos de lista con "- [ ]" o "- [x]"
    if (text.includes('- [ ]') || text.includes('- [x]')) {
      const lines = paragraph.innerHTML.split('<br>');
      let hasListItems = false;
      
      // Verificar si alguna l√≠nea es un item de lista
      lines.forEach(line => {
        if (line.includes('- [ ]') || line.includes('- [x]')) {
          hasListItems = true;
        }
      });
      
      if (hasListItems) {
        // Crear nueva lista UL
        const ul = document.createElement('ul');
        ul.className = 'converted-task-list';
        
        lines.forEach(line => {
          if (line.trim() && (line.includes('- [ ]') || line.includes('- [x]'))) {
            const li = document.createElement('li');
            li.className = 'converted-task-item';
            li.innerHTML = line.trim().replace(/^-\s+/, '');
            ul.appendChild(li);
          }
        });
        
        // Reemplazar el p√°rrafo con la lista
        paragraph.parentNode.replaceChild(ul, paragraph);
        convertedCount++;
      }
    }
  });
  
  console.log(`‚úÖ Convertidos ${convertedCount} p√°rrafos a listas`);
  
  // Aplicar estilos a las nuevas listas
  applyListStyles();
}

// Aplicar estilos de indentaci√≥n a las listas convertidas
function applyListStyles() {
  const style = document.createElement('style');
  style.textContent = `
    .converted-task-list {
      list-style: none !important;
      padding-left: 0 !important;
      margin: 1em 0 !important;
    }
    
    .converted-task-item {
      margin: 0.5em 0 !important;
      padding-left: 0 !important;
      position: relative !important;
    }
    
    /* Indentaci√≥n para listas anidadas */
    .converted-task-list .converted-task-list {
      margin-left: 2.5rem !important;
      padding-left: 1.5rem !important;
      border-left: 3px solid #d1d5db !important;
    }
    
    /* Checkboxes para las listas convertidas */
    .converted-task-item input[type="checkbox"] {
      margin-right: 12px !important;
      transform: scale(1.5) !important;
      vertical-align: middle !important;
    }
  `;
  
  // Solo agregar el estilo si no existe
  if (!document.querySelector('#converted-lists-styles')) {
    style.id = 'converted-lists-styles';
    document.head.appendChild(style);
  }
}

// Ejecutar la conversi√≥n
document.addEventListener('DOMContentLoaded', convertParagraphsToLists);
setTimeout(convertParagraphsToLists, 500);
setTimeout(convertParagraphsToLists, 2000);

// Tambi√©n observar cambios en el DOM
new MutationObserver(convertParagraphsToLists).observe(document.body, {
  childList: true, 
  subtree: true
});
</script>
